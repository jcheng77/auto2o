<h1>Listing bids</h1>

<table>
  <thead>
    <tr>
      <th>Tender</th>
      <th>Dealer</th>
      <th>Price</th>
      <th>Description</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @bids.each do |bid| %>
      <tr>
        <td><%= link_to (bid.tender.description || "标的"), tender_path(bid.tender) %></td>
        <td><%= bid.dealer_id %></td>
        <td><%= bid.price %></td>
        <td><%= bid.description %></td>
        <td>
          <%= link_to "决定成交", accept_final_bid_path(bid), method: :post, data: { confirm: '确定成交' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
