<%= form_for(@tender) do |f| %>
  <% if @tender.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@tender.errors.count, "error") %> prohibited this tender from being saved:</h2>

      <ul>
      <% @tender.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :model, '车型' %><br>
    <%= f.text_field :model, value: "#{@model.name} #{@trim.name} #{@color.name}", readonly: :readonly %>
    <span style="color:<%= @color.code %>;font-size:40px;">◼︎</span>
    <%= f.hidden_field :trim_id, value: @trim.id, readonly: :readonly %>
    <%= f.hidden_field :color_id, value: @color.id, readonly: :readonly %>
  </div>
  <!--
		<div class="field">
    <%= f.label :price %><br>
    <%= f.text_field :price %>
  </div>
	-->
  <div class="field">
    <%= f.label :description, '额外要求' %><br>
    <%= f.text_field :description %>
  </div>
  <div class="actions">
    <%= f.submit '确定买这个' %>
  </div>
<% end %>
