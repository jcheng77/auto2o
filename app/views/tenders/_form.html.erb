<%= form_for(@tender) do |f| %>
  <% if @tender.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@tender.errors.count, "error") %> prohibited this tender from being saved:</h2>

      <ul>
      <% @tender.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :model, '车型' %><br>
    <%= "#{@model.name} #{@trim.name} #{@colors.map(&:name).join(', ')}" %>
    <% @colors.each do |color| %>
    <span style="color:<%= color.code %>;font-size:40px;">◼︎</span>
    <% end %>
    <%= f.hidden_field :model, value: "#{@model.name} #{@trim.name} #{@colors.map(&:name).join(', ')}", readonly: :readonly %>
    <%= f.hidden_field :trim_id, value: @trim.id, readonly: :readonly %>
    <%= f.hidden_field :colors_ids, value: @colors.map(&:id).join(','), readonly: :readonly %>
  </div>
  <!--
		<div class="field">
    <%= f.label :price %><br>
    <%= f.text_field :price %>
  </div>
	-->
	  
  <div class="field">
    <%= f.label :pickup_time, '提车时间' %><br>
    <%= f.text_field :pickup_time %>
  </div>


  <div class="field">
    <%= f.label :license_location, '上牌地点' %><br>
    <%= f.text_field :license_location %>
  </div>

  <div class="field">
    <%= f.label :got_licence, '已有牌照' %><br>
    <%= f.radio_button(:got_licence, 1)  %>是<br>
    <%= f.radio_button(:got_licence, 0)  %>否
  </div>

  <div class="field">
    <%= f.label :loan_option, '贷款或全款' %><br>
    <%= f.radio_button(:loan_option, 1)  %>贷款<br>
    <%= f.radio_button(:loan_option, 2)  %>全款<br>
    <%= f.radio_button(:loan_option, 3)  %>均可
  </div>
  
  <div class="field">
    <%= f.label :price, '裸车价' %><br>
    <%= f.text_field :price %>
  </div>  
  

<!--  
  <div class="field">
    <%= f.label :description, '额外要求' %><br>
    <%= f.text_field :description %>
  </div> 
-->

    <h2>选择经销商：</h2>

        <ul>
          <% @shops.each do |shop| %>
              <li>
                <%= check_box_tag "tender[shops][#{shop.id}]" %>
                <%= label_tag "tender[shops]_#{shop.id}", shop.name %>
              </li>
          <% end %>
        </ul>

  <div class="field">
    <%= f.label :user_name, '车主姓名（须与发票车主一致才能参与优惠活动）' %><br>
    <%= f.text_field :user_name %>
  </div>

  <div class="actions">
    <%= f.submit '提交订单' %>
  </div>
<% end %>
